{
  "name": "document-search",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "chcp 65001 && powershell -NoProfile -Command \"$OutputEncoding = [System.Text.Encoding]::UTF8; npm run start-main\"",
    "start-main": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.document.search",
    "productName": "Document Search Tool V1.0.0 by Tom",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "exceljs": "^4.4.0",
    "iconv-lite": "^0.6.3",
    "mammoth": "^1.9.0",
    "node-stream-zip": "^1.15.0",
    "ole-doc": "^0.1.1",
    "textract": "^2.5.0",
    "word-extractor": "^1.0.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}
