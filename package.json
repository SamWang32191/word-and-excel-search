{
  "name": "document-search",
  "version": "1.1.1",
  "description": "A powerful tool for searching content in Word and Excel files, supporting multiple keywords and smart caching",
  "author": {
    "name": "Tom.Tang",
    "email": "tjjaom@gmail.com",
    "url": "https://github.com/TJJAom"
  },
  "homepage": "https://github.com/TJJAom/WordAndExcelSearch",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start-main": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.tom.document.search",
    "productName": "Document Search Tool V1.1.1 by Tom",
    "copyright": "Copyright Â© 2025 Tom.Tang",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.icns",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Tom.Tang",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
  "oneClick": false,
  "perMachine": false,
  "allowToChangeInstallationDirectory": true,
  "deleteAppDataOnUninstall": true,
  "displayLanguageSelector": true,
  "installerIcon": "build/icon.ico",
  "uninstallerIcon": "build/icon.ico",
  "createDesktopShortcut": true,
  "createStartMenuShortcut": true,
  "shortcutName": "Document Search Tool",
  "installerHeaderIcon": "build/icon.ico"
},
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "base64-js": "^1.5.1",
    "bluebird": "^3.7.2",
    "dingbat-to-unicode": "^1.0.1",
    "exceljs": "^4.4.0",
    "iconv-lite": "^0.6.3",
    "jszip": "^3.10.1",
    "lop": "^0.4.1",
    "mammoth": "^1.9.0",
    "node-stream-zip": "^1.15.0",
    "ole-doc": "^0.1.1",
    "option": "^0.2.4",
    "pako": "^2.1.0",
    "path-is-absolute": "^2.0.0",
    "sax": "^1.3.0",
    "saxes": "^5.0.1",
    "setimmediate": "^1.0.5",
    "textract": "^2.5.0",
    "underscore": "^1.13.6",
    "word-extractor": "^1.0.4",
    "xlsx": "^0.18.5",
    "xmlbuilder": "^15.1.1",
    "buffer-crc32": "^0.2.13",
    "safer-buffer": "^2.1.2",
    "fd-slicer": "^1.1.0",
    "xmlchars": "^2.2.0",
    "yauzl": "^2.10.0",
    "pend": "^1.2.0"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}
